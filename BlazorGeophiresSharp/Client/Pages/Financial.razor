<MudTextField @bind-Value="inflationRateDuringConstruction" Label="Inflation Rate During Construction" ReadOnly="true" Variant="Variant.Outlined" />

@code {
    [Parameter] public FinancialParameters Parms { get; set; }

    private int plantLifetime;
    private int economicModel;
    private double fixedChargeRate;
    private double discountRate;
    private double fractionInvestmentBonds;
    private double inflatedBondInterestRate;
    private double inflatedEquityInterestRate;
    private double inflationRate;
    private double combinedIncomeTaxRate;
    private double grossRevenueTaxRate;
    private double investmentTaxCreditRate;
    private double propertyTaxRate;
    private double inflationRateDuringConstruction;

    protected override void OnParametersSet()
    {
        plantLifetime = Parms.plantlifetime;
        economicModel = Parms.econmodel;
        fixedChargeRate = Parms.FCR;
        discountRate = Parms.discountrate;
        fractionInvestmentBonds = Parms.FIB;
        inflatedBondInterestRate = Parms.BIR;
        inflatedEquityInterestRate = Parms.EIR;
        inflationRate = Parms.RINFL;
        combinedIncomeTaxRate = Parms.CTR;
        grossRevenueTaxRate = Parms.GTR;
        investmentTaxCreditRate = Parms.RITC;
        propertyTaxRate = Parms.PTR;
        inflationRateDuringConstruction = Parms.inflrateconstruction;
    }
}
