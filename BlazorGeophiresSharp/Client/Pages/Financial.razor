<MudTextField @bind-Value="economicModel" Label="Economic Model" ReadOnly="true" Variant="Variant.Outlined" />
<MudTextField @bind-Value="fixedChargeRate" Label="Fixed Charge Rate" ReadOnly="true" Variant="Variant.Outlined" />
<MudTextField @bind-Value="discountRate" Label="Discount Rate" ReadOnly="true" Variant="Variant.Outlined" />
<MudTextField @bind-Value="fractionInvestmentBonds" Label="Fraction of Investment in Bonds" ReadOnly="true" Variant="Variant.Outlined" />
<MudTextField @bind-Value="inflatedBondInterestRate" Label="Inflated Bond Interest Rate" ReadOnly="true" Variant="Variant.Outlined" />
<MudTextField @bind-Value="inflatedEquityInterestRate" Label="Inflated Equity Interest Rate" ReadOnly="true" Variant="Variant.Outlined" />
<MudTextField @bind-Value="inflationRate" Label="Inflation Rate" ReadOnly="true" Variant="Variant.Outlined" />
